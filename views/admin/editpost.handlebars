<section id="contact" class="md-padding my-5">
  <div>
    <div class="row text-center">
      <div class="offset-2 col-md-7 ">
        <div class="section-header">
          <h2 class="title my-5">YEMEK GÜNCELLEME</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 my-5">
        <form action="/admin/posts/{{post._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="_method" value="PUT">
          <div class="row">
            <div class="offset-3 col-md-5">
              <div class="form-group">
                <input
                  class="form-control"
                  name="title"
                  type="text"
                  value="{{post.title}}"
                  required="required"
                />
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <textarea
                  class="form-control"
                  name="content"
                  type="text"
                  required="required"
                >{{post.content}}</textarea>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <textarea
                  class="form-control"
                  name="content2"
                  type="text"
                  required="required"
                >{{post.content2}}</textarea>
                <p class="help-block text-danger"></p>
              </div>
              <div class="form-group">
                <select class="form-control" name="category">
                  {{#each categories}}
                       <option value="{{_id}}">{{name}}</option>
                  {{/each}}
                </select>
                <p class="help-block text-danger"></p>
              </div>
               <div class="form-group">
                <input
                  class="form-control"
                  name="post_image"
                  type="file"
                  required="required"
                ></input>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-11 text-center">
              <div id="success"></div>
              <button class="main-btn" type="submit">Paylaşın</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</section>