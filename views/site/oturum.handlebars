<div class="container m-5" style="padding-top: 100px; padding-bottom: 100px;">
  <div class="row">
    {{#if sessionFlash.message}}
      <div class="{{sessionFlash.type}}">
        {{sessionFlash.message}}
      </div>
    {{/if}}
    <div class="offset-2 col-md-8" style="background-color: rgb(235, 177, 106)">
      <h2 class="display-4 text-center">OTURUM AÇ</h2>
      <form action="/users/login" method="POST">
        <fieldset class="p-4 text-center">
          <div class="row mb-3">
            <label
              for="E-mail"
              class="col-md-3 col-form-label-lg"
            >E-mail</label>
            <div class="col-md-4">
              <input
                name="email"
                type="email"
                placeholder="E-mail giriniz"
                class="form-control"
                required
              />
            </div>
          </div>
          <div class="row mb-3">
            <label for="sifre" class="col-md-3 col-form-label-lg">Sifre</label>
            <div class="col-md-4">
              <input
                name="password"
                type="password"
                placeholder="Sifre giriniz"
                class="form-control"
                required
              />
            </div>
          </div>
          <button type="submit" class="btn btn-info">Oturum Aç</button>
        </fieldset>
      </form>
    </div>
  </div>
</div>